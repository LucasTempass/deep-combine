{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "dist/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "module": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
